<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/item_result_quantity"
            android:text="x1"
            android:textColor="@color/colorDark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item_result_title"
            app:layout_constraintBottom_toBottomOf="@id/item_result_title"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/item_result_title"
            android:text="Arroz con Pollo"
            android:textColor="@color/colorDark"
            android:textSize="16dp"
            android:gravity="end"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_result_quantity"
            app:layout_constraintEnd_toStartOf="@id/item_result_cost"/>

    <TextView
            android:id="@+id/item_result_cost"
            android:text="B/. 2.50"
            android:textColor="@color/colorDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_result_title"
            app:layout_constraintBottom_toBottomOf="@id/item_result_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>
